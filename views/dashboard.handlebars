{{#if posts.length}}
  <section>
    <h2 class="is-size-1">Your Posts</h2>
    {{#each posts as |post|}}
      <div class="block is-rounded has-background-dark dashboard-head">
        <div class="dashboard-title-header">
          <h2 class="has-text-grey-lighter dashboard-post-title">
            <a href="/post/{{id}}" class="is-size-4">
              {{title}}
            </a>
          </h2>
          <p class="meta has-text-grey-lighter is-size-6">
            {{format_date created_at}}
          </p>
        </div>
        <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
      </div>
    {{/each}}
  </section>
{{/if}}

<footer>
  <div class="box has-text-centered">
    <button
      class="js-modal-trigger button is-dark"
      data-target="modal-new-post"
    >
      + New Post
    </button>
  </div>
</footer>

<div id="modal-new-post" class="modal">
  <div class="modal-background"></div>
  <div class="modal-content">
    <div class="box">
      <!-- Your content -->
      <form class="new-post-form container">
        <div>
          <label for="post-title">Title</label>
          <input class="block" type="text" id="post-title" name="post-title" />
        </div>
        <div class="content">
          <label for="post-content">Content</label>
          <textarea class="block" id="post-Content"></textarea>
        </div>
        <button type="submit" class="btn button is-dark">Create</button>
      </form>
    </div>
  </div>

  <button class="modal-close is-large" aria-label="close"></button>
</div>

<script src="/javascript/add-post.js"></script>