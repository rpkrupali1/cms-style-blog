{{#each posts as |post|}}
<li class="post-list">
  <article class="list">
    <div class="title">
      <a href="/post/{{post.id}}">{{post.title}}</a>
      <div class="meta">
        Posted by
        {{post.user.username}}
        on
        {{created_at}}
      </div>
    </div>
    <div class="content">{{post.content}}</div>
  </article>
</li>
{{/each}}